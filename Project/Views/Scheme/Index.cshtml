@model IEnumerable<Project.Models.Schemes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.SchemeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchemeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchemeLevel)
        </th>
        <th></th>
    </tr>

    @foreach (var prod in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => prod.SchemeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => prod.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => prod.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => prod.SchemeType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => prod.SchemeLevel)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = prod.SchemeId })
        </td>
    </tr>
    }

</table>